<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlAdvancedSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:layout_below="@+id/toolbar_search"
        android:background="@color/white"
        android:animateLayoutChanges="false"
        android:padding="@dimen/spacing_small"
        >
    <!--Type: user,video,channel-->
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/white"
            android:layout_marginLeft="@dimen/spacing_small"
        />
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/white"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_alignParentRight="true"
            />
    <!--=======================================-->
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/white"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_below="@id/spinner_type"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/spacing_huge"
            />
    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:background="@drawable/bg_spinner"
            android:popupBackground="@color/white"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_below="@id/spinner_sort"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/spacing_huge"
            />
    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btDone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_smaller"
            android:text="@string/bt_done"
            android:layout_centerHorizontal="true"
            android:background="@color/blue_vimeo"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/spacing_huge"
            android:layout_below="@id/spinner_filter"
        />
</RelativeLayout>