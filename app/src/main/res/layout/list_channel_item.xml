<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white_smoke">
    <RelativeLayout
            android:id="@+id/list_channel_item_rlThumbnail"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true">
        <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"/>
        <TextView
                android:id="@+id/tvVideos"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawableBottom="@drawable/ic_list"
                android:drawablePadding="@dimen/spacing_normal">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/list_channel_item_rlThumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/spacing_small"
            >
        <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_21"
                android:paddingRight="@dimen/text_size_smaller"
                android:textSize="@dimen/text_size_normal"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/spacing_mini"
                android:layout_marginLeft="@dimen/spacing_mini"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="marquee"/>
        <TextView
                android:id="@+id/tvFollows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/gray_21"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_below="@id/tvName"
                android:layout_marginTop="@dimen/spacing_mini"
                android:drawablePadding="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_mini"
                android:layout_marginLeft="@dimen/spacing_mini"/>
        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/gray_21"
                android:layout_below="@id/tvFollows"
                android:layout_marginLeft="@dimen/spacing_mini"
                android:maxLines="3"
                android:ellipsize="marquee"
                android:textStyle="italic"
                />
    </RelativeLayout>
</RelativeLayout>